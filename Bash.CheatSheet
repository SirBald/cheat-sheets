CHMOD

  // chmod only files (f) / directories (d) in all subdirectories
  find . -type f -exec chmod 644 -- {} +
  find . -type d -exec chmod 755 -- {} +
  // the following will not work if filenames contain spaces or start with a dash
  find . -type f -exec chmod 644 {} +
  find . -type d -exec chmod 755 {} +



